
IF @PRICE >=50
	BEGIN 
		SELECT '好貴';
		SELECT @PRICE;
	END
ELSE
	BEGIN 
		SELECT @PRICE;
		SELECT '好便宜';
	END

---------------------------------------------------
--SQL迴圈只有WHILE LOOP
--印出1~10
DECLARE @CC INT =1;
WHILE @CC <=10
	BEGIN
		PRINT @CC;
		SET @CC+=1;
	END
----------------------------------------------------
單一值:
SELECT 員工編號,姓名,職稱,
	CASE 
		WHEN 稱呼='先生' THEN '公' 
		WHEN 稱呼='小姐' THEN '母'
	END AS 性別
FROM 員工;
----------------------------------------------------
IIF() 函數:
SELECT 員工編號,姓名,職稱,
	IIF(稱呼='先生','公','母') AS 性別	
FROM 員工;
----------------------------------------------------
CHOOSE() 函數
SELECT 訂單號碼,客戶編號,訂單日期,送貨方式,
		CHOOSE(送貨方式,'快遞','郵寄','親送') AS 運送
 FROM 訂貨主檔
----------------------------------------------------
EXECUTE (文字型態的SQL命令)
 EXEC ( 'SELECT * FROM 產品資料' )
----------------------------------------------------

內建系統變數  @@SEVERNAME 

@@SEVERNAME
@@SERVICENAME       
@@SPID
@@ERROR
----------------------------------------------------
--RAISE ERROR
--RAISERROR  (錯誤號OR錯誤訊息,錯誤等級1~25,狀態1~127)
1-10 輕微
11-16 中
17-25 嚴重
EX:
  SELECT * FRM 產品資訊;  ==> 16等級
考古題:
  以下指令印出來是相等:
  RAISERROR('這是自訂錯誤訊息',10,10);  -> 這條指令可不會印出等級和狀態
  PRINT('這是自訂錯誤訊息');
------------------------------------------------------------------------
UPDATE 產品資料 SET 單價 =500 WHERE 產品編號=500;  => (0 個資料列受到影響)
(資料庫視為正確,沒更改任何資料,但是程式人員希望拋出錯誤訊息!)

UPDATE 產品資料 SET 單價 =500 WHERE 產品編號=500;
IF @@ROWCOUNT=0 RAISERROR ('沒有更改',16,10); 
------------------------------------------------------------------------




